// import custom fonts
@font-face
  font-family Hanken Grotesk
  font-style normal
  src url(../fonts/HankenGrotesk-VariableFont_wght.ttf)

// font variables
extra-bold-weight = 800
bold-weight = 700
medium-weight = 500

xl-font = 3.5em
lg-font = 1.5em
md-font = 1.13em
sm-font = 1.1em

// color variables
reaction-red = #ff5555
memory-yellow = #ffb21e
verbal-green = #00bb8f
visual-blue = #1125d6
dark-navy = #303b59
pale-blue = #cac9ff
off-white = #ecf2ff

gradient-main = linear-gradient(180deg, #7755ff 0%, #6943ff 0.01%, #2f2ce9 100%)
gradient-accent = linear-gradient(180deg, #4d21c9 0%, rgba(37, 33, 201, 0) 100%)

// global css reset
*
*::before
*::after
  box-sizing border-box

*
  margin 0

html
body
  height 100%

body
  line-height 1.5
  -webkit-font-smoothing antialiased

img
  max-width 100%

button
  font inherit

// font styles
body
h1
h2
p
span
button
  font-family 'Hanken Grotesk', sans-serif

h1
  font-size xl-font
  color white

.result-summary>h2
  font-size lg-font
  color white
  margin-bottom 8px

.overline
.result-breakdown>h2
button
  font-size md-font

.final-score-label
.score-msg
.category-label>p
.category-score
  font-size sm-font

.result-summary>h2
.result-breakdown>h2
.final-score-label
.category-score
button
  font-weight bold-weight

.score-msg
.category-label>p
  font-weight medium-weight

// layout styles
body
  width 100vw
  height 100vh

.result-summary
  background-image gradient-main
  padding 24px 24px 40px 24px
  border-bottom-left-radius 32px
  border-bottom-right-radius 32px
  text-align center

.overline
.final-score-label
.score-msg
  color pale-blue

.final-score-container
  width 140px
  height 140px
  display flex
  flex-direction column
  justify-content center
  background-image gradient-accent
  border-radius 100%
  margin 24px auto

.final-score-label
  margin-top -10px

.score-msg
  width 260px
  margin 0 auto
