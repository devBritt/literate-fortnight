// import custom fonts
@font-face
  font-family Hanken Grotesk
  font-style normal
  src url(../fonts/HankenGrotesk-VariableFont_wght.ttf)

// font variables
extra-bold-weight = 800
bold-weight = 700
medium-weight = 500

// 72px
xxl-font = 5em
// 56px
xl-font = 3.5em
// 32px
lg-font = 2em
// 24px
md-font = 1.5em
// 18px
sm-font = 1.13em
// 16px
xs-font = 1.1em

// color variables
reaction-red = #ff5555
memory-yellow = #ffb21e
verbal-green = #00bb8f
visual-blue = #1125d6
dark-navy = #303b59
pale-blue = #cac9ff
off-white = #ecf2ff

gradient-main = linear-gradient(180deg, #7755ff 0%, #6943ff 0.01%, #2f2ce9 100%)
gradient-accent = linear-gradient(180deg, #4d21c9 0%, rgba(37, 33, 201, 0) 100%)

// global css reset
*
*::before
*::after
  box-sizing border-box

*
  margin 0

html
body
  height 100%

body
  position relative
  min-height 100vh
  padding-bottom 2.5rem
  line-height 1.5
  -webkit-font-smoothing antialiased

img
  max-width 100%

button
  font inherit

// font styles
body
h1
h2
p
span
button
  font-family 'Hanken Grotesk', sans-serif

h1
  font-size xl-font
  font-weight extra-bold-weight
  color white

.result-summary>h2
  font-size md-font
  color white
  margin-bottom 8px

.overline
.result-breakdown>h2
button
  font-size sm-font

.final-score-label
.score-msg
.category-label>p
.category-score
  font-size xs-font

.overline
.result-summary>h2
.result-breakdown>h2
.final-score-label
.category-score
button
  font-weight bold-weight

.score-msg
.category-label>p
  font-weight medium-weight

// position attribution at the bottom of the page
.attribution
  position absolute
  bottom 0
  width 100%
  height 2.5rem

// main component styles
.main-component
  background-color white

// score summary panel styles
body
  width 100vw
  height 100vh

.result-summary
  background-image gradient-main
  padding 24px 24px 40px 24px
  border-bottom-left-radius 32px
  border-bottom-right-radius 32px
  text-align center

.overline
.final-score-label
.score-msg
  color pale-blue

.final-score-container
  width 140px
  height 140px
  display flex
  flex-direction column
  justify-content center
  background-image gradient-accent
  border-radius 100%
  margin 24px auto

.final-score-label
  margin-top -10px

.score-msg
  width 260px
  margin 0 auto

// score breakdown panel styles
.result-breakdown
  padding 32px

.result-breakdown>h2
.category-score
  color dark-navy

.low-opacity
  opacity 50%

.result-breakdown>h2
  margin-bottom 24px

#reaction
  background-color #fff6f6
  &>.category-label
    color reaction-red

#memory
  background-color #fffbf4
  &>.category-label
    color memory-yellow

#verbal
  background-color #f2fcf9
  &>.category-label
    color verbal-green

#visual
  background-color #f3f4fd
  &>.category-label
    color visual-blue

.category-container
  display flex
  justify-content space-between
  align-items center
  border-radius 12px
  padding 16px
  &:not(:last-child)
    margin-bottom 16px

.category-label
  display flex
  &>img
    margin-right 16px

.result-breakdown>button
  margin-top 24px
  width 100%
  border none
  border-radius 100px
  padding 16px 0
  color white
  background-color dark-navy
  &:hover
    background-image gradient-main

// MEDIA QUERIES
// TABLET OR LARGER
@media screen and (min-width: 768px)
  body
    padding 24px
    background-color off-white

  .main-component
    position absolute
    top 50%
    left 50%
    -ms-transform translate(-50%, -50%)
    transform translate(-50%, -50%)
    display flex
    border-radius 32px
    width 736px
    height 512px
    margin 0
    box-shadow 0px 30px 60px rgba(61, 108, 236, 0.15)
    
  .result-summary
    border-radius 32px
    width 50%

  .result-breakdown
    width 50%

  .overline
    font-size md-font

  h1
    font-size xxl-font

  .result-summary>h2
    font-size lg-font

  .final-score-label
  .score-msg
  .category-label
  .category-score
  button
    font-size sm-font

  .final-score-container
    width 200px
    height 200px
    margin-bottom 28px

  .overline
    margin-bottom 36px

  .result-summary>h2
    margin-bottom 14px
